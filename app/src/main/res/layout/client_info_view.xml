<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/serviceViewBg"
    tools:context=".Activity.ActivityClientInfo">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:layout_width="200dp">

            <EditText
                android:id="@+id/findClientByName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="поиск по имени, фамилии"/>
            <Button
                android:id="@+id/findNameSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sharp_add_black_36"
                android:text="Поиск"/>
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/findClientGovNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="поиск по гос. номеру"/>
            <Button
                android:id="@+id/findGovNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sharp_add_black_36"
                android:text="Поиск"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/findClientQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="поиск по QrCode"/>
            <Button
                android:id="@+id/findQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sharp_add_black_36"
                android:text="Поиск"/>
        </TableRow>
    </TableLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clientInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />

        <Button
            android:id="@+id/addCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sharp_add_black_36"
            android:text="Добавить т\с"
            android:layout_gravity="center_horizontal"/>

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="true"
        app:frameColor="@android:color/white"
        app:frameCornersSize="50dp"
        app:frameCornersRadius="0dp"
        app:frameAspectRatioWidth="1"
        app:frameAspectRatioHeight="1"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:maskColor="#77000000"/>
</LinearLayout>