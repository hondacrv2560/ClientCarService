<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/button"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/rowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_up_black_24dp"/>
    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleService"
            android:padding="8dp"
            android:textSize="16dp"
            android:text="text"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/idService"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textColor="#000000" />
    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleService"
        android:orientation="vertical"
        app:ael_duration="400"
        app:ael_expanded="false"
        app:ael_interpolator="bounce">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_sedan"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_sedan"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:inputType="number"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxOrdersSedan"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_business"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_business"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:inputType="number"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxOrdersBusiness"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_premium"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:text="text"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_premium"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:text="text"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:inputType="number"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxOrdersPremium"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_SUV"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:text="text"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_SUV"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:text="text"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:inputType="number"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxOrdersSuv"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/cat_BigSUV"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:text="text"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_BigSUV"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:text="text"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:inputType="number"/>
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkboxOrdersBigSuv"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

</RelativeLayout>